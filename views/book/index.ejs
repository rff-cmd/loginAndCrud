<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Books</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px;">



    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill">
                    <a class="btn btn-primary" href="/secrets">Back</a>
                </li>
                <li class="nav-pill active ml-auto">
                    <strong>BOOKS</strong>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/books/add">Add Book</a>
                </li>
            </ul>
        </div>
        <div class="card-body">


            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Author</th>
                        <th width="200px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < name.length; i++) {%>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= name[i].name %></td>
                        <td><%= author[i].author %></td>
                        <td>
                            <a class="btn btn-success edit" href="../books/edit/<%= name[i]._id %>">Edit</a>
                            <a class="btn btn-danger delete" onclick="return alert('Are You sure?')"
                                href="../books/delete/<%= name[i]._id %>">Delete</a>
                        </td>
                    </tr>
                    <% }%>
                </tbody>
            </table>

            <!-- if result is empty -->
            <!-- <p class="text-center">No book found!</p> -->

        </div>
    </div>

</body>

</html>